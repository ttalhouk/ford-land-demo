<p id="notice"><%= notice %></p>

<h1>Amenities</h1>

<table>
  <thead>
    <tr>
      <th>
        Image
      </th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amenities.each do |amenity| %>
      <tr>
        <td>
          <%=image_tag amenity.pictures.first.image.url(:thumb)%>
        </td>
        <td><%= amenity.name %></td>
        <td><%= amenity.description %></td>
        <td><%= link_to 'Show', amenity %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
