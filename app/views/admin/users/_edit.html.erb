<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
    <h3>Edit User <%= @user.email %></h3>
    </div>

    <div class="modal-dialog">
      <%= form_for [:admin, @user], remote: true, html: { style: "display:inline;" } do |f| %>
        <div class="modal-body">
          <ul class="errors"></ul>
          <div class="form-group">
            <%= f.check_box(:admin) %>
            <%= label_tag(:admin, "Allow admin access to  #{@user.email}?") %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to "Cancel", "#", class: "btn btn-outline-secondary", data: {dismiss: "modal"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
