<h2>User Information</h2>


<div class="input-group search-bar">
  <input type="text" class="form-control" placeholder="Search for Users">
  <span class="input-group-btn">
    <button class="btn btn-primary search-btn" type="button">Search</button>
  </span>
</div>


<table class="admin-table table table-striped table-hover text-center">
  <thead class="thead-default">
    <tr>
      <th>ID</th>
      <th class="text-left">LogIn Email</th>
      <th>Admin?</th>
      <th>Service Requests</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr class='info-row'>
      <th scope="row"><%= user.id %></th>
      <td class="text-left search-field"><%= user.email %></td>
      <td><%= (user.admin ? "<i style='color: green' class='ion-checkmark'></i>" : "<i style='color: red'class='ion-close'></i> ").html_safe%></td>
      <td><%= user.services.count %></td>
      <td>
        <div class="btn-group" role="group" aria-label="Admin Controls for User">
          <%= link_to "Details", admin_user_path(user), class:"btn btn-info" %>
          <%= link_to "Edit", edit_admin_user_path(user), class:"btn btn-primary" %>
          <%= link_to "Delete", admin_user_path(user), class:"btn btn-danger", method: :delete,  data: { confirm: 'Are you sure?' } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
