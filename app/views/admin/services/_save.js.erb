$("div.messages").html("")
<% if @service.errors.any? %>
  <% @service.errors.full_messages.each do |message| %>
    $("div.messages").append('<p />').html("<p class='alert alert-danger'><%= message.html_safe %></p>"))
  <% end %>
<% else %>
  $("div.messages").html("<p class='alert alert-success'> <%=flash[:success]%> </p>")

  $(".service-index").html("<%= escape_javascript(render 'index') %>")
  $("#service-modal").modal("hide")
<% end %>
