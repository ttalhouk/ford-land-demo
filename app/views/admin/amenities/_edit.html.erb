<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Edit Amenity <%= @amenity.name %></h3>
    </div>
    <%= form_for [:admin, @amenity] , html: { multipart: true } do |f| %>
      <%= render 'form', amenity: @amenity, f: f, picture: @picture, type: "edit" %>
    <% end %>
  </div>
</div>
